<!DOCTYPE html>
<html lang="en">
<head>
  <title>Junior Profile | UniShare</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <link rel="stylesheet" href="/css/navbar.css" />
  <link rel="stylesheet" href="/css/profile.css" />
   <link rel="stylesheet" href="/css/notification.css">
</head>
<body>
  <%- include('../includes/navbar') %>
  <div class="container-fluid">
    <div id="notification"></div>
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 sidebar">
        <h5 class="mb-4  pt-3 text-center">Menu</h5>
        <a href="/profile" class="nav-link "><i class="fa-solid fa-user"></i>Profile</a>
        <a href="#" class="nav-link active"><i class="fa-solid fa-key"></i>Change Password</a>
        <%if(user.role ==="Junior"){%>
        <a href="/profile/junior/saved" class="nav-link"><i class="fa-solid fa-bookmark"></i>Saved Notes</a>
        <%} else {%>
            <a href="/profile/senior/uploads" class="nav-link"><i class="fa-solid fa-upload"></i>Uploaded Notes</a>
            <%}%>
      </div>

      <!-- Profile Info -->
      <div class="col-md-9 p-5">
        <h3 class="mb-4 fw-bold text-primary"><i class="fa-regular fa-user"></i>Update Password</h3>
        <form action="/profile/updatePassword/<%=user.id%>" method="POST">
          <div class="mb-3">
            <label class="form-label">Enter old Password</label>
            <input type="password" class="form-control" id="oldPassword" name="oldPassword" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Enter new Password</label>
            <input type="password" class="form-control" name="newPassword" required>
          </div>
          <button class="btn btn-primary">Update</button>
        </form>
    </div>
  </div>
  </div>

  <%- include('../includes/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/JS/notification.js"></script>
  <script>
    const message = "<%=message%>";
    const type = "<%=type%>";
    showNotification(message, type);
  </script>
</body>
</html>
