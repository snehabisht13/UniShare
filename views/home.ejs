<body class="bg-white fade-out">
  <%-include('./includes/navbar')%>
  <div id="notification"></div>
    <section class="home mt-3 slide-in">
      <div class="home-left">
        <h1>Access Notes<br>From Verified Seniors.</h1>
        <p>UniShare connects juniors to curated academic notes, verified by your college seniors and approved by
          admins.</p>
        <%if(!currUser) {%>
          <form class="email-signup" action="/user/login">
            <input type="email" placeholder="Enter your college email" />
            <button type="submit">Get Started</button>
          </form>
          <%}%>
            <div class="trusted-by">
              <p>Trusted by students from:</p>
              <img src="/Images/Photo1.png" alt="College 1">
              <img src="/Images/Photo2.png" alt="College 2">

            </div>
      </div>

      <div class="home-right ">
        <h4>Recently Uploaded</h4>
        <%for(let note of notes){%>
          <div class="note-card">
            <img src="<%=note.image%>" alt="img">
            <p><strong>Subject : <%=note.subject%></strong></p>
            <p>By: <%=note.uploadedBy.name%> <br> On: <%=(note.uploadedAt).toLocaleDateString()%>
            </p>

            <a href="/notes/<%= note.fileUrl %>" target="_blank"><button class="btn btn-secondary download-btn">View
                Note</button></a>
          </div>
          <%}%>
      </div>
    </section>



